<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jf.andro.energycollector"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="jf.andro.JFLApp"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="jf.andro.EnergyLoggerService"
            android:exported="false">
            <intent-filter>

                <!-- Start/Stop service -->
                <action android:name="jf.andro.energyservice" />
            </intent-filter>
        </service>
        <service
            android:name="jf.andro.ScenarioService"
            android:exported="false">
            <intent-filter>

                <!-- Start/Stop service -->
                <action android:name="jf.andro.scenarioservice" />
            </intent-filter>
        </service>

        <receiver android:name="jf.andro.PowerTutorReceiver">
            <intent-filter>
                <action android:name="jf.andro.SteganoSender" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
